@model ElectronicBookFormModel

@{
    ViewData["Title"] = "Create eBook";
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group col-md-4">
        <label asp-for="Title"></label>
        <input asp-for="Title" type="text" class="form-control">
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Description"></label>
        <input asp-for="Description" type="text" class="form-control">
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Author"></label>
        <input asp-for="Author" type="text" class="form-control">
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="text" class="form-control">
    </div>
    <div class="form-group col-md-4">
        <label asp-for="BookRarityId"></label>
        <select asp-for="BookRarityId" class="form-control">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
    <div class="form-group col-md-4">
        <label class="form-label">Book image</label>
        <input class="form-control" type="file" name="bookCoverImage" />
    </div>
    <div class="form-group col-md-4">
        <label class="form-label">Book data</label>
        <input class="form-control" type="file" name="bookData" />
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>

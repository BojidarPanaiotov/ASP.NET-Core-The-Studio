@model ElectronicBookQueryModel

@{
    ViewData["Title"] = "eBooks";
}
<h1 class="text-center text-justify mb-5">Welcome to our eBook world</h1>
@* Search Bar *@
<div class="input-group rounded col-md-6 mr-auto">
    <input class="form-control rounded" placeholder="Search" aria-label="Search"
           aria-describedby="search-addon" id="searchBar" />
    <span class="input-group-text border-0">
        <i class="fas fa-search"></i>
    </span>
</div>
@* Filtering *@
<div class="container mt-3">
    <div class="row">
        <div class="col">
            <h3>Genres</h3>
            @foreach (var gener in Model.Geners)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="@gener.Id">
                    <label class="form-check-label" for="flexCheckDefault">
                        @gener.Name
                    </label>
                </div>
            }
        </div>
        <div class="col">
            <h3>Category</h3>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Latest
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                <label class="form-check-label" for="flexCheckChecked">
                    Series
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                <label class="form-check-label" for="flexCheckChecked">
                    Discount
                </label>
            </div>
        </div>
        <div class="col">
            <h3>Rarity</h3>
            @foreach (var rarity in Model.BookRarities)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="@rarity.Id">
                    <label class="form-check-label" for="flexCheckDefault">
                        @rarity.Name
                    </label>
                </div>
            }
        </div>
    </div>
</div>
@* EBook products *@
<div class="row mt-5" id="all_electronic_books">
    @foreach (var eBook in Model.ElectronicBooks)
    {
        <div class="card ml-4 mb-4 electronic_book_product" style="width: 13rem;">
            <img class="card-img-top" src="https://d1csarkz8obe9u.cloudfront.net/posterpreviews/horror-story-wattpad-ebook-cover-design-template-c25b394f605471c4deaf7bd087d54378_screen.jpg?ts=1585045707" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title text-truncate">@eBook.Title</h5>
                <p class="card-text text-truncate">Description: @eBook.Description</p>
                <p class="card-text text-truncate">Author: @eBook.Author</p>
                <p class="card-text">CopySold: @eBook.CopySold</p>
                <p class="card-text">Rarity: @eBook.BookRarity.Name</p>
                <a href="#" class="btn btn-primary mb-3">Buy for @eBook.Price BGN</a>
            </div>
        </div>
    }
</div>

<script>
    let searchBar = document.getElementById('searchBar');

    searchBar.addEventListener('keyup', (e) => {
        if (searchBar.value.length > 2) {
            let electronicBookWrapper = document.getElementById('all_electronic_books');

            fetch('api/electronicBooks/books')
                .then(response => response.json())
                .then(bookData => {
                    let electronibBookHtml = '';
                    bookData.forEach(book => {
                        if (book.title.includes(searchBar.value)) {
                            electronibBookHtml += 
           `<div class="card ml-4 mb-4 electronic_book_product" style="width: 13rem;">
            <img class="card-img-top" src="https://m.media-amazon.com/images/I/51y3g75bCJL.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title text-truncate">${book.title}</h5>
                <p class="card-text text-truncate">Description: ${book.description}</p>
                <p class="card-text text-truncate">Author: ${book.author}</p>
                <p class="card-text">CopySold: ${book.copySold}</p>
                <p class="card-text">Rarity: ${book.rarity}</p>
                <a href="#" class="btn btn-primary mb-3">Buy for ${book.price} BGN</a>
                </div>
            </div>`
                        }
                    });
                    electronicBookWrapper.innerHTML = electronibBookHtml;
                });
        }
        
    });
</script>


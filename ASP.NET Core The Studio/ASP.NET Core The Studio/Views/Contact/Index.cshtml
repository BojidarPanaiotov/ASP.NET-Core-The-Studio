@using ASP.NET_Core_The_Studio.Models.Feedbacks
@model FeedbackFormModel
@{
    ViewData["Title"] = "Contacts";
}

<section class="mb-4">
    <h2 class="h1-responsive font-weight-bold text-center my-4">Contact us</h2>
    <p class="text-center w-responsive mx-auto mb-5">
        Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
        a matter of hours to help you.
    </p>
    <div class="row">
        <div class="col-md-9 mb-md-0 mb-5">
            <form method="POST">
                <div class="row">
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <span asp-validation-for="Username" class="small text-danger"></span>
                            <input asp-for="Username" class="form-control">
                            <label asp-for="Username"></label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <span asp-validation-for="Sender" class="small text-danger"></span>
                            <input asp-for="Sender" class="form-control">
                            <label asp-for="Sender"></label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <span asp-validation-for="Subject" class="small text-danger"></span>
                            <input asp-for="Subject" class="form-control">
                            <label asp-for="Subject"></label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form">
                            <span asp-validation-for="Content" class="small text-danger"></span>
                            <textarea asp-for="Content" rows="2" class="form-control md-textarea"></textarea>
                            <label asp-for="Content"></label>
                        </div>
                    </div>
                </div>
            <div class="text-center text-md-left">
                <button class="btn btn-primary">Send</button>
            </div>
            </form>
            <div class="status"></div>
        </div>
        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li>
                    <i class="fas fa-map-marker-alt fa-2x"></i>
                    <p>San Francisco, CA 94126, USA</p>
                </li>
                <li>
                    <i class="fas fa-phone mt-4 fa-2x"></i>
                    <p>+ 01 234 567 89</p>
                </li>
                <li>
                    <i class="fas fa-envelope mt-4 fa-2x"></i>
                    <p>contact@mdbootstrap.com</p>
                </li>
            </ul>
        </div>
    </div>
</section>
